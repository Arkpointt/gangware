/* Generated from design tokens. Do not edit this file directly; edit theme.qss.j2 and tokens. */
QWidget {
  background: transparent;
  font-family: {{ FONT_STACK }};
  color: {{ TEXT_DEFAULT }};
  font-size: {{ FONT_SIZE }}px;
}

#card {
  background-color: {{ BG_CARD_RGBA }};
  border: 1px solid {{ BORDER_CYAN }};
  border-radius: {{ RADIUS_CARD }}px;
}

#title {
  font-size: {{ TITLE_SIZE }}px;
  font-weight: 800;
  letter-spacing: 6px;
  color: {{ CYAN }};
  padding-top: 2px;
}
#subtitle {
  font-size: {{ SUBTITLE_SIZE }}px;
  color: {{ TEXT_DEFAULT }};
  letter-spacing: 1px;
}

#divider {
  background: {{ DIVIDER }};
  border: none;
}

#tab {
  font-weight: 700;
  color: #ffffff;
  border-radius: {{ RADIUS_TAB }}px;
  border: 1px solid {{ BORDER_CYAN }};
  background-color: rgba(0,221,255,0.16);
  padding: {{ TAB_PADDING_Y }}px {{ TAB_PADDING_X }}px;
  min-height: {{ TAB_MIN_HEIGHT }}px;
}
#tab:hover { background-color: rgba(0,221,255,0.28); }
#tab:checked {
  background-color: rgba(0,221,255,0.30);
  border-color: rgba(0,221,255,0.70);
}

#section {
  background: {{ BG_SECTION_RGBA }};
  border: 1px solid {{ BORDER_SECTION }};
  border-radius: {{ RADIUS_SECTION }}px;
}
#sectionTitle {
  color: {{ ORANGE }};
  font-weight: 800;
  font-size: {{ SECTION_SIZE }}px;
  margin-bottom: 2px;
}
#item {
  color: #E6EBF1;
  font-weight: 600;
  padding: 2px 0px; /* add breathing room to avoid glyph clipping on some DPI/fonts */
}

#keycap {
  color: {{ CYAN }};
  font-weight: 800;
  background-color: {{ KEYCAP_BG }};
  border: 2px solid {{ KEYCAP_BORDER }};
  border-radius: {{ RADIUS_KEYCAP }}px;
  padding: {{ KEYCAP_PADDING_Y }}px {{ KEYCAP_PADDING_X }}px;
}

/* Small button uses the same spec as keycap for unified badges */
#smallBtn {
  font-weight: 800;
  color: #FFFFFF;
  background-color: {{ KEYCAP_BG }};
  border: 2px solid {{ KEYCAP_BORDER }};
  border-radius: {{ RADIUS_KEYCAP }}px;
  padding: {{ KEYCAP_PADDING_Y }}px {{ KEYCAP_PADDING_X }}px;
}
#smallBtn:hover { background-color: rgba(0,221,255,0.28); }

#statusBox {
  background-color: {{ STATUSBOX_BG }};
  border: 1px solid {{ STATUSBOX_BORDER }};
  border-radius: 8px;
  padding: 6px 10px;
  color: {{ TEXT_DEFAULT }};
  font-weight: 800;
  letter-spacing: 1px;
}
#statusBox[state="done"] {
  border-color: rgba(0,221,255,0.70);
  color: {{ CYAN }};
}

/* Optional success state (token coverage) */
#statusBox[state="ok"] {
  color: {{ STATUS_OK }};
}

#status { color: #7FE6FF; letter-spacing: 2px; }
#calTitle { color: {{ ORANGE }}; font-size: {{ SECTION_SIZE }}px; font-weight: 800; }
#hint { color: {{ TEXT_DEFAULT }}; }

/* Scroll area styling */
#scrollArea {
  background: transparent;
  border: none;
}
#scrollArea QScrollBar:vertical {
  background-color: rgba(18,28,40,0.40);
  width: 12px;
  border-radius: 6px;
  border: 1px solid rgba(0,221,255,0.20);
}
#scrollArea QScrollBar::handle:vertical {
  background-color: rgba(0,221,255,0.35);
  border-radius: 5px;
  min-height: 20px;
}
#scrollArea QScrollBar::handle:vertical:hover {
  background-color: rgba(0,221,255,0.50);
}

/* Dropdown/ComboBox styling */
#dropdown {
  background-color: rgba(18,28,40,0.80);
  border: 1px solid rgba(0,221,255,0.40);
  border-radius: 6px;
  padding: 6px 10px;
  color: {{ TEXT_DEFAULT }};
  font-weight: 600;
  min-height: 24px;
}
#dropdown:hover {
  background-color: rgba(0,221,255,0.15);
  border-color: rgba(0,221,255,0.60);
}
#dropdown::drop-down {
  border: none;
  width: 20px;
}
#dropdown::down-arrow {
  image: none;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  border-top: 5px solid {{ CYAN }};
  width: 0px;
  height: 0px;
}
#dropdown QAbstractItemView {
  background-color: rgba(18,28,40,0.95);
  border: 1px solid rgba(0,221,255,0.60);
  border-radius: 6px;
  color: {{ TEXT_DEFAULT }};
  selection-background-color: rgba(0,221,255,0.30);
  outline: none;
}

/* Optional operational variant for green status */
#status[variant="operational"] { color: {{ STATUS_OK }}; }
